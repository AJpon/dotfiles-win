# yaml-language-server: $schema=https://aka.ms/configuration-dsc-schema/0.2

properties:
  assertions:
  - resource: Microsoft.Windows.Developer/OsVersion
    directives:
      description: Verify min OS version requirement
      allowPrerelease: true
    settings:
      MinVersion: '10.0.22000'
  resources:
  - resource: Microsoft.WinGet.DSC/WinGetPackage
    id: addChrome
    settings:
      id: Google.Chrome
      source: winget
  - resource: Microsoft.WinGet.DSC/WinGetPackage
    id: addDriveFs
    directives:
      description: Install Google Drive
      allowPrerelease: true
      securityContext: elevated
    settings:
      id: Google.GoogleDrive
      source: winget
      UseLatest: true
      InstallMode: Interactive
  - resource: Microsoft.Windows/Registry
    id: disable drive fs localization
    dependsOn:
    - addDriveFs
    directives:
      allowPrerelease: true
      securityContext: elevated
    settings:
      keyPath: 'HKLM:\Software\Google\DriveFS' # Machine scope
      valueName: DisableLocalizedVirtualFolders
      valueData:
        DWord: 1

  # - resource: Microsoft.DSC.Transitional/RunCommandOnSet
  #   id: addToolsInteractive
  #   directives:
  #     description: Install tools interactively
  #     allowPrerelease: true
  #     securityContext: elevated
